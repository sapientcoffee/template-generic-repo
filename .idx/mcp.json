{
  "mcpServers": {
    "firebase": {
       "command": "npx",
       "args": [
         "-y",
         "firebase-tools@latest",
         "experimental:mcp"
        ]
      },
    "cloud-run": {
      "command": "npx",
      "args": [
        "-y",
        "https://github.com/GoogleCloudPlatform/cloud-run-mcp"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT}"
      }
    }

    
    }

  }